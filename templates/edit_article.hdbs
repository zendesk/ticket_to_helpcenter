<ul class="edit_article">
  {{#article}}
  <li> 
    <a href="{{html_url}}" class="btn" target="blank">Open in Help Center</a>
  </li>
  <br>
  <li>
    Title: <br>
    <input type="text" name="title" class="title" value="{{title}}"></input>
  </li>
  <br>
  <li>
    HTML Body: <br>
    <textarea class="edit_article body" contenteditable="true">{{body}}</textarea>
  </li>
  <br>
  <li class="article_options">
    <label>Labels</label>
    <input type="text" class="labels span2" value="{{#label_names}}{{this}}{{#unless @last}}, {{/unless}}{{/label_names}}" />
    <br><br>
    Draft: <input type="checkbox" class="draft" name="draft" {{#if draft}}checked{{/if}} /> | 
    Promoted: <input type="checkbox" class="promoted" name="promoted" {{#if promoted}}checked{{/if}} /> | 
    Disable Comments: <input type="checkbox" class="comments_disabled" name="comments_disabled" {{#if comments_disabled}}checked{{/if}} />
  </li>
  <li class="actions pull-right">
    <button type="button" class="delete_article btn">Delete</button> | 
    {{!-- <button class="btn" id="modal_toggle">Open editor</button> | --}}
    <input type="submit" class="post_changes btn btn-primary" value="Post Changes">
  </li>

  {{/article}}
</ul>

